<%- title @song.title -%>
<%- content_for :header do -%>
    <script type="text/javascript">
      $(function() { resize($('#p0')[0]); })
    </script>
<%- end -%>

<%- @song.phrases.each_with_index do |phrase, idx| %>
    <pre id="<%= 'p' + idx.to_s %>" class="song <%= idx > 0 ? 'hidden' : '' %>"><%= rubify  phrase %></pre>
<%- end -%>

<script type="text/javascript">
    $(document).keydown(function(event) {
        if (event.keyCode == 38) {
            return prev();
        } else if (event.keyCode == 40) {
            return next();
        }
    });
</script>