<%- title @song.title -%>
<%- content_for :header do -%>
 <style type="text/css">
 html,body {
   overflow: hidden;
 }
 </style>
<%- end -%>
<div id='container'>
<%- @song.phrases.each_with_index do |phrase, idx| %>
    <div id="<%= 'p' + idx.to_s %>" class="song <%= idx > 0 ? 'hidden' : '' %>"><pre><%= rubify  phrase %></pre></div>
<%- end -%>

<script type="text/javascript">
    resize($('#p0')[0]);

    $(document).keydown(function(event) {
        if (event.keyCode == 38) {
            return prev();
        } else if (event.keyCode == 40) {
            return next();
        }
    });
</script>
</div>
