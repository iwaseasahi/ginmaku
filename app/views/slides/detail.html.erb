<%- title @slide.title -%>

<%- @slide.pages.each_with_index do |page, idx| -%>
  <%- hidden_class = idx > 0 ? 'hidden' : '' -%>
  <pre id="<%= 'p' + idx.to_s %>" class="page <%= hidden_class %>"><%= page %></pre>
<%- end -%>

<script type="text/javascript">
  resize($('#p0')[0]);

  $(document).keydown(function(event) {
      if (event.keyCode == 38) {
          return prev();
      } else if (event.keyCode == 40) {
          return next();
      }
  });
</script>
