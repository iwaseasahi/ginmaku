<%- title @slide.title -%>
<%- content_for :header do -%>
 <style type="text/css">
 html,body {
   overflow: hidden;
 }
 </style>
<%- end -%>
<div id="container">
<%- @slide.pages.each_with_index do |page, idx| -%>
  <%- hidden_class = idx > 0 ? 'hidden' : '' -%>
  <pre id="<%= 'p' + idx.to_s %>" class="slide <%= hidden_class %>"><%= page %></pre>
<%- end -%>

<script type="text/javascript">
  resize($('#p0')[0]);

  $(document).keydown(function(event) {
      if (event.keyCode == 38) {
          return prev();
      } else if (event.keyCode == 40) {
          return next();
      }
  });
</script>
</div>
